{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NewZoneCore Universal Document",
  "type": "object",

  "required": [
    "type",
    "version",
    "id",
    "created_at",
    "issuer",
    "subject",
    "payload",
    "constraints",
    "proof"
  ],

  "properties": {
    "type": {
      "type": "string",
      "enum": ["entity", "delegation", "ownership", "revocation", "fact"]
    },

    "version": { "type": "string" },

    "id": { "type": "string" },

    "created_at": {
      "type": "string",
      "format": "date-time"
    },

    "issuer": {
      "type": "object",
      "required": ["key_id"],
      "properties": {
        "key_id": { "type": "string" }
      }
    },

    "subject": {
      "type": "object",
      "required": ["key_id"],
      "properties": {
        "key_id": { "type": "string" }
      }
    },

    "constraints": {
      "type": "object",
      "properties": {
        "not_before": { "type": "string", "format": "date-time" },
        "expires_at": { "type": "string", "format": "date-time" }
      }
    },

    "payload": {
      "type": "object",
      "description": "Semantic content of the document. Structure depends on `type`.",
      "properties": {

        "entity_type": { "type": "string" },
        "metrics": { "type": "object", "additionalProperties": true },
        "attributes": { "type": "object", "additionalProperties": true },

        "delegation_type": { "type": "string" },
        "rights": {
          "type": "array",
          "items": { "type": "string" }
        },
        "scope": { "type": "object", "additionalProperties": true },
        "context": { "type": "object", "additionalProperties": true },

        "parent_key_id": { "type": "string" },
        "origin": { "type": "string" },
        "lineage": {
          "type": "array",
          "items": { "type": "string" }
        },

        "target_type": { "type": "string" },
        "target_id": { "type": "string" },
        "reason": { "type": "string" },
        "severity": { "type": "string" },

        "fact_type": { "type": "string" },
        "data": { "type": "object", "additionalProperties": true }
      },
      "additionalProperties": true
    },

    "proof": {
      "type": "object",
      "required": ["algo", "hash", "signature"],
      "properties": {
        "algo": { "type": "string" },
        "hash": { "type": "string" },
        "signature": { "type": "string" }
      }
    }
  }
}

